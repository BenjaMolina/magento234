<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_width" xsi:type="number">164</argument>
                <argument name="logo_height" xsi:type="number">65</argument>
                <argument name="logo_alt" xsi:type="string">Casa Lum Store</argument>
            </arguments>
        </referenceBlock>

        <!--  HEADER   -->
        <referenceContainer name="header.panel.wrapper">
            <container name="casalum_store_header_after_container"
                       label="Telefono Header Before Header Content"
                       htmlTag="div"
                       htmlClass="header-after panel header"
                       before="header.panel">
                <block class="Magento\Framework\View\Element\Template"
                       name="casalum.store.header.additional.content"
                       template="CasaLum_StoresTheme::header/telefono.phtml" 
                       before="header.panel"/>
            </container>
        </referenceContainer>

        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Html\Links" name="header.links">
                <arguments>
                    <argument name="css_class" xsi:type="string">header links</argument>
                </arguments>
            </block>
        </referenceContainer>

        <move element="header.panel"  destination="header-wrapper" after="top.search" />

        <!--
            <block class="Magento\Framework\View\Element\Template"
                name="nav.cuenta"
                template="CasaLum_StoresTheme::header/nav/index.phtml" 
                > 
        </block>
        <referenceBlock name="top.links" remove="true"/>
        -->

        <!--<move element="nav.cuenta"  destination="header.links" before="-" />-->
        
        

        <referenceBlock name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="casalum.store.content.container"
                   template="CasaLum_StoresTheme::content.phtml" />
        </referenceBlock>



    </body>
</page>
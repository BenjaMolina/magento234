<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="casalum_banners_slider"
            class="CasaLum\BannerSlider\Block\Widget\BannerSlider"
            placeholder_image="CasaLum_BannerSlider::images/banner-slider-widget.png" ttl="86400">
        <label translate="true">My Banners Slider</label>
        <description translate="true">Show the banners slider via Slider Name</description>
        <parameters>
            <parameter name="slider_id" xsi:type="select" visible="true" required="true"
                       source_model="CasaLum\BannerSlider\Model\Config\Source\SlidersWidget">
                <label translate="true">Slider Name</label>
            </parameter>
            <parameter name="template" xsi:type="select" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="default"
                            value=""
                            selected="true">
                        <label translate="true">Select ...</label>
                    </option>
                    <option name="homepage"
                            value="CasaLum_BannerSlider::list.phtml">
                        <label translate="true">Homepage Template</label>
                    </option>
                    <option name="brand"
                            value="CasaLum_BannerSlider::banner/brand-list.phtml">
                        <label translate="true">Brand Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>